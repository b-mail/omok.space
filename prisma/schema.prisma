generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id         String    @id @default(cuid())
  blackId    String?
  whiteId    String?
  winnerId   String?
  status     String    @default("WAITING")
  moves      Json
  createdAt  DateTime  @default(now())
  finishedAt DateTime?
}
